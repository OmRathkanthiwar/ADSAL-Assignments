import java.util.Scanner;
import java.util.Queue;
import java.util.ArrayDeque;

class BSTNode {
    int data;
    BSTNode left;
    BSTNode right;

    BSTNode(int data) {
        this.data = data;
        left = null;
        right = null;
    }
}

public class BST {

    BSTNode root;

    BST() {
        root = null;
    }

    BSTNode insert(BSTNode root, int data) {
        if (root == null)
            return new BSTNode(data);

        if (data == root.data) {
            System.out.println("Duplicate key - insertion not allowed");
            return root;
        }

        if (data < root.data)
            root.left = insert(root.left, data);
        else
            root.right = insert(root.right, data);

        return root;
    }

    void search(BSTNode root, int key) {
        BSTNode p = root;

        while (p != null) {
            if (key == p.data) {
                System.out.println("Key found");
                return;
            } else if (key < p.data)
                p = p.left;
            else
                p = p.right;
        }
        System.out.println("Key not found");
    }

    void inorder(BSTNode root) {
        if (root != null) {
            inorder(root.left);
            System.out.print(root.data + " ");
            inorder(root.right);
        }
    }

    void preorder(BSTNode root) {
        if (root != null) {
            System.out.print(root.data + " ");
            preorder(root.left);
            preorder(root.right);
        }
    }

    void postorder(BSTNode root) {
        if (root != null) {
            postorder(root.left);
            postorder(root.right);
            System.out.print(root.data + " ");
        }
    }

    void levelorder(BSTNode root) {
        if (root == null)
            return;

        Queue<BSTNode> q = new ArrayDeque<>();
        q.offer(root);

        while (!q.isEmpty()) {
            BSTNode node = q.poll();
            System.out.print(node.data + " ");

            if (node.left != null)
                q.offer(node.left);
            if (node.right != null)
                q.offer(node.right);
        }
    }

    void mirror(BSTNode root) {
        if (root == null)
            return;

        BSTNode temp = root.left;
        root.left = root.right;
        root.right = temp;

        mirror(root.left);
        mirror(root.right);
    }

    BSTNode copyTree(BSTNode root) {
        if (root == null)
            return null;

        BSTNode temp = new BSTNode(root.data);
        temp.left = copyTree(root.left);
        temp.right = copyTree(root.right);
        return temp;
    }

    int height(BSTNode root) {
        if (root == null)
            return 0;

        return 1 + Math.max(height(root.left), height(root.right));
    }

    BSTNode delete(BSTNode root, int key) {
        if (root == null)
            return null;

        if (key < root.data) {
            root.left = delete(root.left, key);
        } else if (key > root.data) {
            root.right = delete(root.right, key);
        } else {
            if (root.left == null)
                return root.right;
            else if (root.right == null)
                return root.left;

            BSTNode successor = minValueNode(root.right);
            root.data = successor.data;
            root.right = delete(root.right, successor.data);
        }
        return root;
    }

    BSTNode minValueNode(BSTNode node) {
        while (node.left != null)
            node = node.left;
        return node;
    }

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        BST tree = new BST();
        int choice, value;

        do {
            System.out.println("\n-- MENU --");
            System.out.println("1. Insert");
            System.out.println("2. Search");
            System.out.println("3. Inorder");
            System.out.println("4. Preorder");
            System.out.println("5. Postorder");
            System.out.println("6. Levelorder");
            System.out.println("7. Mirror");
            System.out.println("8. Copy Tree");
            System.out.println("9. Height");
            System.out.println("10. Delete");
            System.out.println("0. Exit");
            System.out.print("Enter choice: ");

            choice = sc.nextInt();

            switch (choice) {
                case 1:
                    value = sc.nextInt();
                    tree.root = tree.insert(tree.root, value);
                    break;
                case 2:
                    value = sc.nextInt();
                    tree.search(tree.root, value);
                    break;
                case 3:
                    tree.inorder(tree.root);
                    System.out.println();
                    break;
                case 4:
                    tree.preorder(tree.root);
                    System.out.println();
                    break;
                case 5:
                    tree.postorder(tree.root);
                    System.out.println();
                    break;
                case 6:
                    tree.levelorder(tree.root);
                    System.out.println();
                    break;
                case 7:
                    tree.mirror(tree.root);
                    tree.inorder(tree.root);
                    System.out.println();
                    break;
                case 8:
                    BSTNode copy = tree.copyTree(tree.root);
                    tree.inorder(copy);
                    System.out.println();
                    break;
                case 9:
                    System.out.println("Height: " + tree.height(tree.root));
                    break;
                case 10:
                    value = sc.nextInt();
                    tree.root = tree.delete(tree.root, value);
                    break;
            }
        } while (choice != 0);

        sc.close();
    }
}
